# An example binary using the Prelude module from the
# GHC base package, and zlib from stackage, to print the hello world.
haskell_binary(
    name = "skylight",
    srcs = [
        ":Main.hs",
        ":Sqlite.hs",
    ],
    deps = [
        ":base",
        "@stackage//:aeson",
        "@stackage//:attoparsec",
        "@stackage//:bytestring",
        "@stackage//:containers",
        "@stackage//:cryptohash-sha256",
        "@stackage//:direct-sqlite",
        "@stackage//:stm",
        "@stackage//:text",
        "@stackage//:time",
        "@stackage//:unix",
        "@stackage//:zlib",
    ],
)
